#!/usr/bin/env bash

set -e

source $HOME/.zsh/exports.sh
source $HOME/.zsh/asdf.sh

asdf local ruby 2.7.1

gem install bundler
bundle update

rake release

terminal-notifier \
  -message "Just published a new gem version." \
  -ignoreDnD \
  -title "email_data" \
  -group homebrew \
  &> /dev/null
